@model BugTrackingSystem.Models.Bug

@{
    ViewData["Title"] = "Resolve";
}

<h1>Resolve Bug</h1>

<h4>Bug</h4>
<hr />
<div>
    <h4>Are you sure you want to resolve this?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Summary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Summary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="ResolveConfirmed">
        <input type="hidden" asp-for="Id" />
